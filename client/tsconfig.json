{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",

		"paths": {
			"@/*": ["./src/*"],
			"@public/*": ["./public/*"]
		},

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true
    },
	"exclude": ["node_modules", "./presets/**/*js"],
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"./tailwind.config.ts",
		"./postcss.config.js",
		"./apollo.config.js",
		"./vue-shim.d.ts",
		"./vite.config.ts",
		"./.eslintrc.cjs"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
